@model IEnumerable<DiscountDto>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Список скидок</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="col-6"></div>
        <div class="col-6">
            <a asp-action="CreateDiscount" class="btn btn-outline-primary"><i class="bi bi-plus-square">Добавить новую скидку</i></a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Код скидки
                </th>
                <th>
                    Сумма скидки
                </th>
                <th>
                    Минимальная сумма заказа
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DiscountCode</td>
                    <td>@item.DiscountAmount.ToString("c")</td>
                    <td>@item.MinAmount.ToString("c")</td>
                    <td>                        
                        <a asp-action="eleteiscount" asp-route-discountId="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }            
        </tbody>
    </table>
</div>