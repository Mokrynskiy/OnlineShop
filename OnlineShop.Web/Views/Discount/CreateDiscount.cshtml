@model DiscountDto
<form asp-action="CreateDiscount">
    <br/>
    <h1 class="text-white text-center">Создание новой скидки</h1>
    <hr/>
    <div class="row">
        <div class="col-2">
            <label class="control-lable pt-2"style="font-size:20px;">Код скидки</label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="DiscountCode" class="form-control"/>
            <span asp-validation-for="DiscountCode" class="text-danger"/>
        </div>
        <div class="col-2">
            <label class="control-lable pt-2" style="font-size:20px;">Сумма скидки</label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="DiscountAmount" class="form-control" />
            <span asp-validation-for="DiscountAmount" class="text-danger" />
        </div>
        <div class="col-2">
            <label class="control-lable pt-2" style="font-size:20px;">Минимальная сумма заказа</label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="MinAmount" class="form-control" />
            <span asp-validation-for="MinAmount" class="text-danger" />
        </div>
        <div class="col-5 offset-2">
            <a asp-action="DiscountIndex" class="btn-primary btn form-control">Назад</a>
        </div>
        <div class="col-5">
            <input type="submit" value="Сохранить" class="btn btn-success form-control"/>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}